  "bugs": {
    "url": "https://github.com/PowerUpSoup/express-boilerplate/issues"
  },
  "homepage": "https://github.com/PowerUpSoup/express-boilerplate#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "knex": "^2.4.0",
    "morgan": "^1.9.1",
    "pg": "^8.2.1",
    "postgrator": "^4.0.0",
    "xss": "^1.0.7"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    
    "mocha": "^7.2.0",
